@model IEnumerable<WebApplication1.Models.InstructorViewModel>

@{
    ViewData["Title"] = "Instructors";
}

<h1>Instructors</h1>

<div class="mb-3">
    <a asp-action="Create" class="btn btn-success">Create New Instructor</a>
</div>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Name</th>
            <th>Academic Title</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var instructor in Model)
        {
            <tr>
                <td>@instructor.Name</td>
                <td>@instructor.AcademicTitle</td>
                <td>
                    <a asp-action="Details" asp-route-id="@instructor.Id" class="btn btn-info btn-sm">Details</a>
                    <a asp-action="Edit" asp-route-id="@instructor.Id" class="btn btn-primary btn-sm">Edit</a>
                    <a asp-action="Delete" asp-route-id="@instructor.Id" class="btn btn-danger btn-sm">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
