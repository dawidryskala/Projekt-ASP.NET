@model WebApplication1.Models.InstructorViewModel

@{
    ViewData["Title"] = "Edit Instructor";
}

<h1>Edit Instructor</h1>

<form asp-action="Edit">
    <input type="hidden" asp-for="Id" />
    <div class="form-group">
        <label asp-for="Name"></label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="AcademicTitle"></label>
        <input asp-for="AcademicTitle" class="form-control" />
        <span asp-validation-for="AcademicTitle" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Save</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>
