@model WebApplication1.Models.EnrollmentViewModel

<h1>Delete Enrollment</h1>

<p>Are you sure you want to delete this enrollment?</p>

<dl class="row">
    <dt class="col-sm-2">Student</dt>
    <dd class="col-sm-10">@Model.StudentName</dd>

    <dt class="col-sm-2">Course</dt>
    <dd class="col-sm-10">@Model.CourseTitle</dd>

    <dt class="col-sm-2">Grade</dt>
    <dd class="col-sm-10">@Model.Grade</dd>
</dl>

<form asp-action="Delete">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>
