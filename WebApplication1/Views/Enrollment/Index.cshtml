@model IEnumerable<WebApplication1.Models.EnrollmentViewModel>

@{
    ViewData["Title"] = "Enrollments";
}

<h1>Enrollment</h1>

<a asp-action="Create" class="btn btn-success">Create New Enrollment</a>

<table class="table">
    <thead>
        <tr>
            <th>Course</th>
            <th>Student</th>
            <th>Grade</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var enrollment in Model)
        {
            <tr>
                <td>@enrollment.CourseTitle</td>
                <td>@enrollment.StudentName</td>
                <td>@enrollment.Grade</td>
                <td>
                    <a asp-action="Details" asp-route-id="@enrollment.Id" class="btn btn-info">Details</a>
                    <a asp-action="Edit" asp-route-id="@enrollment.Id" class="btn btn-primary">Edit</a>
                    <a asp-action="Delete" asp-route-id="@enrollment.Id" class="btn btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
